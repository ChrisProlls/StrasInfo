<UserControl x:Class="StrasInfo.Popup.PopupInfoStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:ConnectionId='1' x:Name="Popup"
          Margin="27,0,0,100">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border x:ConnectionId='2' x:Name="PopupBorder"
                Grid.Row="0"
                BorderBrush="{StaticResource ApplicationMainColor}"
                MaxWidth="300"
                CornerRadius="5"
                BorderThickness="1">
            <Grid  Background="#AA000000">
                <StackPanel Grid.Row="0"
                            Orientation="Vertical"
                            Margin="10">
                    <TextBlock Text="{Binding dt}"
                               FontSize="20"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding dp}"
                               FontSize="14"
                               Foreground="White"
                               TextWrapping="Wrap" />
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Text="Début : "
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding tb}"
                                   Margin="3,0,0,0"
                                   Foreground="White"
                                   FontSize="14" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Fin : "
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding te}"
                                   Margin="3,0,0,0"
                                   Foreground="White"
                                   FontSize="14" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        <ContentControl x:ConnectionId='3' Grid.Row="1"
                        x:Name="ContentControlArrow"
                        Margin="0,0,0,8"
                        Style="{StaticResource ArrowPopupTrafic}" />
    </Grid>
</UserControl>

