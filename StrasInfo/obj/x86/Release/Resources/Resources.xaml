<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="using:StrasInfo.Converter">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <x:String x:Key="ProgressBarIndeterminateForegroundThemeBrush">White</x:String>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    <SolidColorBrush x:Key="ApplicationMainColor"
                     Color="#97bf0b" />
    <SolidColorBrush x:Key="ApplicationMainColorDark"
                     Color="#536806" />
    <SolidColorBrush x:Key="ApplicationMenuHeaderColor"
                     Color="#55000000" />
    <SolidColorBrush x:Key="ApplicationMenuRowColor"
                     Color="#FF717171" />
    <SolidColorBrush x:Key="ApplicationHomeTextColor"
                     Color="Black" />
    <SolidColorBrush x:Key="ApplicationMainColorLight"
                     Color="#dbf778"/>
    
    <converter:BooleanToVisibilityConverter x:Key="TrueToVisibleConverter" />
    <converter:BooleanToVisibilityConverter x:Key="FalseToVisibleConverter"
                                            IsReversed="True" />
    <converter:StringDistanceToVisibility x:Key="StringDistanceToVisibility" />
    <converter:BooleanToTransparentConverter x:Key="BooleanToTransparentConverter" />
    <converter:StringToBrushConverter x:Key="StringToBrushConverter" />
    <converter:StringColorToBlackOrWhiteBrush x:Key="StringColorToBlackOrWhiteBrush" />
    <FontFamily x:Key="StrasInfoFont">/Fonts/missionscript/Mission-Script.otf#Mission Script</FontFamily>
    <FontFamily x:Key="AboutTitleFont">/Fonts/headline/HEADOH.TTF#Headline One HPLHS</FontFamily>
    <DataTemplate x:Key="HomeTrafficTemplate">
        <Grid>
            <StackPanel Orientation="Vertical"
                        Margin="8,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding dt}"
                               Foreground="Black"
                               FontSize="20"
                               FontFamily="Segoe UI"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Distance}"
                               Visibility="{Binding Distance, Converter={StaticResource StringDistanceToVisibility}}"
                               Margin="10,0,0,0"
                               FontSize="20"
                               Foreground="DarkSlateGray"
                               FontFamily="Segoe UI"
                               FontWeight="Light" />
                </StackPanel>
                <TextBlock Text="{Binding dp}"
                           FontSize="14"
                           Foreground="Black"
                           TextWrapping="Wrap" />
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Début : "
                               FontSize="14"
                               Foreground="Black"
                               FontWeight="Bold"
                               Grid.Row="0"
                               Grid.Column="0" />
                    <TextBlock Text="{Binding tb}"
                               Margin="3,0,0,0"
                               Foreground="Black"
                               FontSize="14"
                               Grid.Row="0"
                               Grid.Column="1" />
                    <TextBlock Text="Fin : "
                               Foreground="Black"
                               FontSize="14"
                               FontWeight="Bold"
                               Grid.Row="1"
                               Grid.Column="0" />
                    <TextBlock Text="{Binding te}"
                               Foreground="Black"
                               Margin="3,0,0,0"
                               FontSize="14"
                               Grid.Row="1"
                               Grid.Column="1" />
                </Grid>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="TransportLigneTemplate">
        <Grid ScrollViewer.VerticalScrollMode="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ContentControl ContentTemplate="{StaticResource EllipseLigne}" 
                                />
                <StackPanel Grid.Column="1"
                            Margin="10 0 0 0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding FullName}"
                               FontSize="20"
                               Foreground="Black" />
                    <TextBlock Text="{Binding Name}"
                               FontSize="15"
                               Foreground="DimGray" />
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="HoursTemplate">
        <Grid ScrollViewer.VerticalScrollMode="Disabled">
            <Grid.Resources>
                <Style TargetType="TextBlock"
                       x:Name="SubtitleStyle">
                    <Setter Property="Foreground"
                            Value="DimGray" />
                    <Setter Property="FontSize"
                            Value="15" />
                    <Setter Property="Margin" Value="10 0 0 0"/>
                </Style>
            </Grid.Resources>
            <StackPanel VerticalAlignment="Center"
                        Margin="15 5 5 0">
                <TextBlock Text="{Binding Name}"
                           Foreground="Black"
                           FontSize="19" />
                <Border BorderBrush="{StaticResource ApplicationMainColor}"
                        BorderThickness="2 0 0 0"
                        Margin="10 0 0 0">
                    <ListView 
                        ItemsSource="{Binding Arrivees}"
                        ItemContainerStyle="{StaticResource ListViewItemHomeSubStyle}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBlock"
                                               x:Name="SubtitleStyle">
                                            <Setter Property="Foreground"
                                                    Value="DimGray" />
                                            <Setter Property="FontSize"
                                                    Value="15" />
                                            <Setter Property="Margin" Value="10 0 0 0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </Grid.Resources>

                                    <Grid Width="35"
                                          Height="35"
                                          Margin="0 0 20 0">
                                        <Ellipse Fill="{Binding Color, Converter={StaticResource StringToBrushConverter}}" />
                                        <TextBlock Text="{Binding Number}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="14"
                                                    Foreground="{Binding Color, Converter={StaticResource StringColorToBlackOrWhiteBrush}}" />
                                    </Grid>
                                    <TextBlock Grid.Column="1" Text="{Binding Destination}" Style="{StaticResource SubtitleStyle}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Horaire}" Style="{StaticResource SubtitleStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="EllipseLigne">
        <Grid Width="75"
                      Height="75"
                      Margin="8">
            <Ellipse Fill="{Binding Color, Converter={StaticResource StringToBrushConverter}}" />
            <TextBlock Text="{Binding Number}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="23"
                               Foreground="{Binding Color, Converter={StaticResource StringColorToBlackOrWhiteBrush}}" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="TransportArretTemplate">
        <Grid>
            <Grid.Resources>
                <Style TargetType="TextBlock"
                       x:Name="SubtitleStyle">
                    <Setter Property="Foreground"
                            Value="DimGray" />
                    <Setter Property="FontSize"
                            Value="15" />
                    <Setter Property="Margin" Value="10 0 0 0"/>
                </Style>
            </Grid.Resources>
            <StackPanel VerticalAlignment="Center"
                        Margin="15 5 5 0">
                <TextBlock Text="{Binding Name}"
                           Foreground="Black"
                           FontSize="19" />
                <Border BorderBrush="{StaticResource ApplicationMainColor}"
                        BorderThickness="2 0 0 0"
                        Margin="10 0 0 0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="De votre position : "
                                       Style="{StaticResource SubtitleStyle}" />
                            <TextBlock Text="{Binding Distance}"
                                       Style="{StaticResource SubtitleStyle}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Prochain départ : "
                                       Style="{StaticResource SubtitleStyle}" />
                            <TextBlock Text="{Binding NextDeparture}"
                                       Style="{StaticResource SubtitleStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ParkingTemplate">
        <Grid>
            <StackPanel Grid.Row="0"
                        Orientation="Vertical"
                        Margin="4,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding nom}"
                               Foreground="Black"
                               FontSize="20"
                               FontFamily="Segoe UI"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding distance}"
                               Visibility="{Binding distance, Converter={StaticResource StringDistanceToVisibility}}"
                               Margin="10,0,0,0"
                               FontSize="20"
                               Foreground="DarkSlateGray"
                               FontFamily="Segoe UI"
                               FontWeight="Light" />
                </StackPanel>
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Status : "
                               FontSize="14"
                               Foreground="Black"
                               FontWeight="Bold"
                               Grid.Row="0"
                               Grid.Column="0" />
                    <TextBlock Text="{Binding status}"
                               Margin="3,0,0,0"
                               FontSize="14"
                               Grid.Row="0"
                               Grid.Column="1">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding statusColor}" />
                        </TextBlock.Foreground></TextBlock>
                    <TextBlock Text="Place(s) : "
                               Foreground="Black"
                               FontSize="14"
                               FontWeight="Bold"
                               Grid.Row="1"
                               Grid.Column="0" />
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="1">
                        <TextBlock Text="{Binding placesDisponibles}"
                                   Foreground="Black"
                                   Margin="3,0,0,0"
                                   FontSize="14" />
                        <TextBlock Text=" / "
                                   Foreground="Black"
                                   FontSize="14" />
                        <TextBlock Text="{Binding placesTotal}"
                                   Foreground="Black"
                                   Margin="3,0,0,0"
                                   FontSize="14" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </DataTemplate>

    <Style TargetType="ListViewItem" x:Key="ListViewItemHomeSubStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" Storyboard.TargetName="myback" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#97bf0b"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected"/>
                                <VisualState x:Name="SelectedUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="myback" Background="Transparent" Margin="5 0 0 0" Padding="5 0">
                            <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListViewItem" x:Key="ListViewItemHomeStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0" Storyboard.TargetName="myback" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#edfabb"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected"/>
                                <VisualState x:Name="SelectedUnfocused"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="myback" Background="Transparent" Margin="0 5 0 5" CornerRadius="7" Padding="7">
                            <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

